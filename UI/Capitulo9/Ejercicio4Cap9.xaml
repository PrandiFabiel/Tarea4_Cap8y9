<Window x:Class="Capitulo8y9.UI.Capitulo9.Ejercicio4Cap9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capitulo8y9.UI.Capitulo9"
        mc:Ignorable="d"
        Title="Ejercicio4Cap9" Height="150" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="Inserte un numero del 1 al 7."/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="InsertarNumeracionTextBox" Width="40" Height="20" Margin="5,0"/>
                <Button Name="MostrarButton" Content="Mostrar" Width="60" Click="MostrarButton_Click"/>
            </StackPanel>

            <Label Content="Tipo de neumatico segun el numero: "/>
            <TextBox Name="TipoTextBox" Width="200" IsReadOnly="True" Margin="5,0" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
